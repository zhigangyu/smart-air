<common:BindablePage x:ConnectionId='1' x:Class="SmartAir.MainPage"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="using:SmartAir"
                     xmlns:common="using:SmartAir.Common"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d"
                     RequestedTheme="Dark"
                     xmlns:gif="using:XamlAnimatedGif">

    <Page.Resources>
        <x:Double x:Key="DashboardFontSize">36</x:Double>
        <Thickness x:Key="BorderThickness">2</Thickness>
        <Thickness x:Key="BorderMargin">3,3,3,3</Thickness>
        <SolidColorBrush x:Key="BorderColor">#FF0063B1</SolidColorBrush>
        <SolidColorBrush x:Key="DashboardHeaderTextColor">#FF0063B1</SolidColorBrush>
        <SolidColorBrush x:Key="DashboardTextColor">White</SolidColorBrush>
        <SolidColorBrush x:Key="DisplayHeaderTextColor">Yellow</SolidColorBrush>
        <SolidColorBrush x:Key="DisplayTextColor">White</SolidColorBrush>
    </Page.Resources>


    <Grid x:ConnectionId='2' Name="rootgrid">
        <Grid.Background>
            <ImageBrush x:ConnectionId='3' x:Name="bg" Stretch="Fill" ImageSource="Images/1.jpeg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!-- Dashboard -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Total Attempts -->
            <Border Grid.Column="0"
                    Grid.Row="0"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="{StaticResource BorderThickness}"
                    Margin="{StaticResource BorderMargin}">
                <TextBlock Text="Max"
                           FontSize="{StaticResource DashboardFontSize}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Foreground="{StaticResource DisplayHeaderTextColor}" />
            </Border>
            <Border Grid.Column="0"
                    Grid.Row="1"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="{StaticResource BorderThickness}"
                    Margin="3,3,3,3">
                <TextBlock x:ConnectionId='10'                                    
                           FontSize="{StaticResource DashboardFontSize}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Foreground="{StaticResource DashboardTextColor}" />
            </Border>

            <!-- Average Retries -->
            <Border Grid.Column="1"
                    Grid.Row="0"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="{StaticResource BorderThickness}"
                    Margin="{StaticResource BorderMargin}">
                <TextBlock Text="Min"
                           FontSize="{StaticResource DashboardFontSize}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Foreground="{StaticResource DisplayHeaderTextColor}" />
            </Border>
            <Border Grid.Column="1"
                    Grid.Row="1"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="{StaticResource BorderThickness}"
                    Margin="3,3,3,3">
                <TextBlock x:ConnectionId='9'                                    
                           FontSize="{StaticResource DashboardFontSize}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Foreground="{StaticResource DashboardTextColor}" />
            </Border>

            <!-- Total Successful -->

            <!-- Successful Percentage -->

            <!-- Successful Percentage -->
        </Grid>

        <!-- Display -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Humidity -->
            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="Humidity"
                       FontSize="40"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource DisplayHeaderTextColor}" />
            <TextBlock x:ConnectionId='4' Grid.Column="0"
                       Grid.Row="1"
                                                                   
                       FontSize="80"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Margin="10,10,10,10"
                       Foreground="{StaticResource DisplayTextColor}" />

            <!-- Temperature -->
            <TextBlock Grid.Column="1"
                       Grid.Row="0"
                       Text="Temperature"
                       FontSize="40"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource DisplayHeaderTextColor}" />
            <TextBlock x:ConnectionId='5' Grid.Column="1"
                       Grid.Row="1"
                                                                      
                       FontSize="80"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Margin="10,10,10,10"
                       Foreground="{StaticResource DisplayTextColor}" />
            <!-- PM2.5 -->
            <TextBlock Grid.Column="2"
                       Grid.Row="0"
                       Text="PM2.5"
                       FontSize="40"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource DisplayHeaderTextColor}" />
            <TextBlock x:ConnectionId='6' Grid.Column="2"
                       Grid.Row="1"
                                                               
                       FontSize="80"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Margin="10,10,10,10"
                       Foreground="{StaticResource DisplayTextColor}" />

            <!-- Last Updated -->
            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Text="Dalian 1901"
                       FontSize="35"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource DisplayHeaderTextColor}"
                       Margin="0,0,20,0" />
            <TextBlock x:ConnectionId='7' Grid.Column="1"
                       Grid.Row="2"
                                                                      
                       FontSize="35"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20,0,0,0"
                       Foreground="{StaticResource DisplayTextColor}" />
            <Image x:ConnectionId='8' x:Name="image" Grid.Column="2" gif:AnimationBehavior.SourceUri="Images/logo_1.gif" HorizontalAlignment="Center" Height="Auto" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="300"/>
            <!--
            <ProgressRing IsActive="True" Grid.Column="2"
                       Grid.Row="2" Width="100" Height="100" >
                <ProgressRing.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFEEF907" Offset="1"/>
                    </LinearGradientBrush>
                </ProgressRing.Foreground>
            </ProgressRing>-->
            
        </Grid>
    </Grid>
</common:BindablePage>

